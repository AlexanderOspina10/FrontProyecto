<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar cliente</title>
    {{> header}}
     <link rel="stylesheet" href="../assets/css/validacionesForms.css" />
</head>
<body class="  ">
        <!-- Inicio del cargar -->
    <div id="loading">
      <div class="loader simple-loader">
          <div class="loader-body">
          </div>
      </div>    </div>
    <!-- Fin cargar -->

    <!-- Inicio Barra lateral -->

        {{> sidebar}}    
 
    <!-- Fin Barra lateral -->


    <!-- Inicio Barra superior -->
        {{> topbar}}
    <!-- Fin Barra superior -->

              
    <!-- Inicio contenido -->      
    <div class="container-fluid content-inner">
         <div class="row">                
            <div class="col-sm-12 col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                          <div class="card-header py-6">
                    <h3 class="m-0 font-weight-bold text-primary">Agregar cliente</h3>
                </div>
                    </div>
                    <div class="card-body">
                        <form class="formularioRegistro" id="formularioRegistro">
                                 <div class="row">

                                     {{!-- Campo documento --}}

                                     <div class="col-lg-6">
                                          <div class="form-group formularioRegistro__grupo" id="grupo__documentoCliente">
                                                <div class="formularioRegistro__grupo-input" >
                                                   <label for="documentoCliente" class="formularioRegistro__label"># documento*</label>
                                                   <input type="text" class="form-control" name="documentoCliente" id="documentoCliente" aria-describedby="documentoClienteHelp" placeholder="Ingrese Documento"/>
                                                   <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                                </div>
                                                <p class="formularioRegistro__input-error">Ingresa un documento valido</p>
                                                <div><small id="documentoClienteHelp" class="form-text text-muted"><br></small> </div> 
                                                
                                          </div>
                                    </div>
                                    
                                    {{!-- Campo Nombres --}}

                                      <div class="col-lg-6">
                                       <div class="form-group formularioRegistro__grupo" id="grupo__nombreCliente">
                                             <div class="formularioRegistro__grupo-input" >
                                                <label for="nombreCliente" class="formularioRegistro__label">Nombre *</label>
                                                <input type="text" class="form-control" name="nombreCliente" id="nombreCliente" aria-describedby="nombreClienteHelp" placeholder="Ingrese Nombre"/>               
                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                             </div>
                                              <p class="formularioRegistro__input-error">Los nombres no puede contener numeros o caracteres especiales</p>
                                             <div><small id="nombreClienteHelp" class="form-text text-muted"><br></small> </div>  
                                          </div>
                                      </div>
                                    

                                    {{!-- Campo correo --}}

                                        <div class="col-lg-6">
                                       <div class="form-group formularioRegistro__grupo" id="grupo__correoCliente">
                                             <div class="formularioRegistro__grupo-input" >
                                                <label for="correoCliente" class="formularioRegistro__label">Correo Electronico *</label>
                                                <input type="text" class="form-control" name="correoCliente" id="correoCliente" aria-describedby="correoClienteHelp" placeholder="Ingrese Correo Electronico"/>               
                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                             </div>
                                              <p class="formularioRegistro__input-error">El correo no es valido</p>
                                             <div><small id="correoClienteHelp" class="form-text text-muted"><br></small> </div>  
                                          </div>
                                      </div>
                                    
                                    
                                    {{!-- Campo Numero Cel --}}

                                       <div class="col-lg-6">
                                       <div class="form-group formularioRegistro__grupo" id="grupo__telefonoCliente">
                                             <div class="formularioRegistro__grupo-input" >
                                                <label for="telefonoCliente" class="formularioRegistro__label">Telefono *</label>
                                                <input type="text" class="form-control" name="telefonoCliente" id="telefonoCliente" aria-describedby="telefonoClienteHelp" placeholder="Ingrese Telefono"/>               
                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                             </div>
                                              <p class="formularioRegistro__input-error">El numero no es valido.</p>
                                             <div><small id="telefonoClienteHelp" class="form-text text-muted"><br></small> </div>  
                                          </div>
                                      </div>
                                    


                                    {{!-- Campo direccion --}}

                                        <div class="col-lg-6">
                                       <div class="form-group formularioRegistro__grupo" id="grupo__direccionCliente">
                                             <div class="formularioRegistro__grupo-input" >
                                                <label for="direccionCliente" class="formularioRegistro__label">Dirección *</label>
                                                <input type="text" class="form-control" name="direccionCliente" id="direccionCliente" aria-describedby="direccionClienteHelp" placeholder="Ej: Cra 19 # 52-102"/>               
                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                             </div>
                                              <p class="formularioRegistro__input-error">Ingrese una direccion valida.</p>
                                             <div><small id="direccionClienteHelp" class="form-text text-muted"><br></small> </div>  
                                          </div>
                                      </div>


                                         {{!-- Campo contrasenia --}}
                                         <div class="col-lg-6">
                                              <div class="form-group formularioRegistro__grupo" id="grupo__password">
                                                            <div class="formularioRegistro__grupo-input" >
                                                               <label for="password" class="formularioRegistro__label">Contraseña *</label>
                                                               <input type="text" class="form-control" name="password" id="password" aria-describedby="passwordHelp" placeholder="Ingrese una contraseña"/>                             
                                                               <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                                            </div>
                                                            <p class="formularioRegistro__input-error">
                                                               La contraseña debe contener:
                                                               <br>- Mínimo un número,
                                                               <br>- Una letra mayúscula,
                                                               <br>- Máximo 12 caracteres.
                                                            </p>
                                                            <div><small id="passwordHelp" class="form-text text-muted"><br></small> </div>  
                                                </div>
                                         </div>

                                    <div class="col-lg-6">
                                             <div class="form-group formularioRegistro__grupo" id="grupo__confirmarPassword">
                                             <div class="formularioRegistro__grupo-input" >
                                                <label for="confirmarPassword" class="formularioRegistro__label">Confirmar Contraseña *</label>
                                                <input type="text" class="form-control" name="confirmarPassword" id="confirmarPassword" aria-describedby="confirmarPasswordHelp" placeholder="Confirme Contraseña"/>                             
                                                <i class="formularioRegistro__validacion-estado fas fa-times-circle "></i>
                                             </div>
                                             <p class="formularioRegistro__input-error">La contraseña no coincide.</p>
                                    </div>

                                    </div>

                                     {{!-- Campo Estado --}}
                                    
                                    <div class="col-md-6">
                                       <div class="form-group formularioRegistro__grupo formularioRegistro__grupo-estadoCliente" id="grupo__estadoCliente">
                                          <label for="estadoCliente">Seleccionar Estado*</label>
                                          <select name="estadoCliente" id="estadoCliente" class="form-control" required>
                                                <option value="">Seleccione el Estado</option>
                                                <option value="true">Activo</option>
                                                <option value="false">Inactivo</option>
                                          </select>
                                          <small id="estadoClienteHelp" class="form-text text-muted"><br></small>
                                       </div>
                                    </div>

                                    <div>
                                       <button type="submit" class="btn btn-primary next action-button float-end" id="btnRegistrar">Registrar</button>
                                       <a href="../clientes"><button type="button" name="Cancelar" class="btn btn-dark previous action-button-previous float-end me-1" value="Previous">Cancelar</button></a>
                                    </div>
                           </div>
                     </div>
               </div>
                              
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Fin contenido --> 

    <!-- Footer Section Start -->
    <footer class="footer">
        {{> copyright}}
    </footer>
    <!-- Footer Section End -->

    {{> footer}}

    <script src="../assets/js/formClientes.js"></script>
    <script src="../assets/js/funciones.js"></script>
</body>
</html>